{
  "name": "homeassistant-mqtt-ui",
  "version": "1.0.1",
  "description": "UI to administer MQTT device discovery for Home Assistant",
  "productName": "HomeAssistantMQTT-UI",
  "author": "Boris Fritscher <boris@fritscher.ch>",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "quasar dev",
    "dev:desktop": "quasar dev -m electron --devtools",
    "build": "quasar build",
    "build:desktop": "quasar build -m electron --target all",
    "postinstall": "quasar prepare"
  },
  "dependencies": {
    "@quasar/extras": "^1.17.0",
    "monaco-editor": "^0.52.2",
    "mqtt": "^5.13.1",
    "pinia": "^3.0.3",
    "quasar": "^2.18.1",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@quasar/app-vite": "^2.2.0",
    "@vue/devtools": "^7.7.6",
    "autoprefixer": "^10.4.21",
    "@electron/packager": "^18.3.6",
    "electron": "^36.4.0",
    "eslint": "^9.28.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "eslint-plugin-vue": "^9.32.0",
    "prettier": "^3.5.3",
    "vite-plugin-checker": "^0.9.1"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
